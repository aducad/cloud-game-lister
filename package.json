    "eslint-plugin-vue": "^7.9.0",
    "eslint-watch": "^7.0.0",
    "fast-glob": "^2.2.7",
    "file-loader": "^4.3.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^0.8.0",
